FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      IDefault;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{

inlet
{
        type            wideBandDiffusiveRadiationWSGG;
        T               T;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           uniform 0;
}

outlet
{
        type            wideBandDiffusiveRadiationWSGG;
        T               T;
        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 0;
        emissivityMode  lookup;
        emissivity      uniform 1;
        value           uniform 0;
}

walls
{
        type            empty;
}

}

