FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      radiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

radiation       on;

radiationModel  fvDOMVeg;

noRadiation
{
}

fvDOMVegCoeffs
{
    nPhi    4;          // azimuthal angles in PI/2 on X-Y.(from Y to X)
    nTheta  4;          // polar angles in PI (from Z to X-Y plane)
    convergence 1e-3;   // convergence criteria for radiation iteration
    maxIter 3;         // maximum number of iterations
}

// Number of flow iterations per radiation iteration
solverFreq 20;


absorptionEmissionModel binaryAbsorptionEmissionVeg;

binaryAbsorptionEmissionVegCoeffs
{

	model1
	{
		absorptionEmissionModel greyMeanAbsorptionEmissionVeg;
		greyMeanAbsorptionEmissionVegCoeffs
		{
				lookUpTableFileName     "SpeciesTable";
				EhrrCoeff                0.35;
		}
	
	}


	model2
	{
		absorptionEmissionModel biomassCloudAbsorptionEmission;
		biomassCloudAbsorptionEmissionCoeffs
		{
            		cloudNames
            		(
				vegetationBed
            		);
		}
	
	}


}





scatterModel    constantScatter;

constantScatterCoeffs
{
    sigma           sigma [ 0 -1 0 0 0 0 0 ] 0;
    C               C [ 0 0 0 0 0 0 0 ] 0;
}


